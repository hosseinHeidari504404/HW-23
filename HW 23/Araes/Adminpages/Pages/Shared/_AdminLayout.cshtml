<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/adminManagement.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/create.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet">

    <link rel="stylesheet" href="~/css/adminManagement.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/create.css" asp-append-version="true" />

    <style>
        body {
            margin: 0;
            font-family: sans-serif;
            background: #ffffff;
            color: #333;
        }

        .container {
            display: flex;
            height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 240px;
            border-right: 1px solid #eee;
            padding: 20px;
            background: #fff;
        }

            .sidebar h2 {
                margin-bottom: 30px;
                font-size: 20px;
                color: #555;
            }

            .sidebar a {
                display: block;
                padding: 12px;
                margin-bottom: 10px;
                text-decoration: none;
                border-radius: 8px;
                color: #444;
                transition: 0.2s;
            }

                .sidebar a:hover {
                    background: #f3e6fa;
                }

        /* Main */
        .main {
            flex: 1;
            padding: 30px;
            overflow-y: auto;
        }

    </style>
</head>
<body>

    <div class="container">

        <div class="sidebar">
            <h2>Admin Panel</h2>
            <a asp-page="/Home/Index">Main Page</a>
            <a asp-area="Admin" asp-page="/Dashboard/Index">Dashboard</a>
            <a asp-area="Admin" asp-page="/Product/Index">Products</a>
            <a asp-area="Admin" asp-page="/Category/Index">Categories</a>
            <a asp-area="Admin" asp-page="/Order/Index">Orders</a>
            <a asp-area="Admin" asp-page="/User/Index">Users</a>
        </div>


        <div class="main">
            @RenderBody();
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>

