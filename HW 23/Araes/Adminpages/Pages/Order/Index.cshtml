@page
@model HW_23.Araes.Adminpages.Pages.Order.IndexModel
@{
}
<div class="page-header">
    <h1>Orders Management</h1>
</div>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Customer Name</th>
            <th>Date</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CustomerFullName</td>
                <td>@order.CreatedAt</td>
                <td>@order.TotalPrice</td>
                <td class="actions">
                    <a asp-page="OrderItems" asp-route-orderId="@order.OrderId"><button class="btn edit">View Items</button></a>
                </td>
            </tr>
        }
    </tbody>
</table>




