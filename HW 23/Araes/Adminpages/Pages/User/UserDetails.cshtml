@page
@model HW_23.Araes.Adminpages.Pages.User.UserDetailsModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/create.css">
</head>
<body>
    <div class="form-container">
        <h1>User Information</h1>
        <div class="form-flex">
            <div class="form-left">

                <label>First Name</label>
                <input type="text" asp-for="UserDetails.FirstName" readonly required>

                <label>Last Name</label>
                <input type="text" asp-for="UserDetails.LastName" readonly required>

                <label>Username</label>
                <input type="text" asp-for="UserDetails.Username" readonly required>

                <label>Address</label>
                <input type="text" asp-for="UserDetails.Address" readonly required>

                <label>Phone</label>
                <input type="text" asp-for="UserDetails.Phone" readonly required>

                <label>Wallet</label>
                <input type="text" asp-for="UserDetails.WalletCount" readonly required>

            </div>

        </div>

    </div>

</body>
</html>