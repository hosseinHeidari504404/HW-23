@page
@model HW_23.Araes.Adminpages.Pages.User.IndexModel
@{
}
<div class="page-header">
    <h1>User Management</h1>
</div>
<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Order Counts</th>
            <th>View Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Username</td>
                <td>@user.orderCount</td>
                <td class="actions">
                    <a asp-page="UserDetails" asp-route-userId="@user.Id"><button class="btn edit">View</button></a>
                </td>
            </tr>
        }
    </tbody>
</table>
