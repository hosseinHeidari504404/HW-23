@page
@model HW_23.Pages.Account.LoginModel
@{
}


<link rel="stylesheet" href="~/css/login.css" />

<div class="login-wrapper">
    <div class="login-box">
        <h2>Welcome Back</h2>
        <p class="subtitle">Login to continue shopping</p>

        <form method="post" asp-page-handler="Login">
            <div class="input-group">
                <label asp-for="Username">Username</label>
                <input type="text" asp-for="Username" required>
            </div>

            <div class="input-group">
                <label asp-for="Password">Password</label>
                <input type="password" asp-for="Password" required>
            </div>

            <button type="submit" class="login-btn">LOGIN</button>

            <div class="bottom-links">
                <a href="#">Forgot password?</a>
                <a asp-page="/Register">Create account</a>
            </div>
        </form>
        <div class="message-box">
            <p>
                @Model.Message
            </p>
        </div>
    </div>
</div>

